<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: Book.new %>
    <!--※インスタンス変数を置かず、直接部分テンプレートにBook.newを渡すことでも解決ができます。</div>-->
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to user_path(@book.user.id) do %>
            <%= image_tag @user.get_profile_image(100,100) %><br>
            <%= @book.user.name %>
            <% end %></td>
          </tr>

        <tr>
          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <%end%>
        </tr>

        <tr>
          <td>コメント件数：<%= @book.book_comments.count %></td><!--ｺﾒﾝﾄID-->
          <td><% @book.book_comments.each do |book_comment| %><!--ｺﾒﾝﾄID、ﾌﾞﾛｯｸ変数に格納-->
          <%= image_tag book_comment.user.get_profile_image(100,100) %>
          <%= book_comment.user.name %>
          <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
          <% end %> </td>
        </tr>

        <tr>
          <td><%= form_with model: [@book_comment] do |f| %>
            <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
            <% end %>
            p><%= link_to "#{@book.book_comments.count} コメント", book_path(@book.id) %>
          </td>
        </tr>

      </table>
    </div>
</div>